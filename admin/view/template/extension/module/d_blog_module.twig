            var d_shopunity_update = jQuery.extend(true, {}, d_shopunity_widget);
            d_shopunity_update.init({
            class: '.d_shopunity_update',
            token: '{{token}}',
            extension_id: 'd_blog_module',
            action: 'loadUpdate'
